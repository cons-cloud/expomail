# Configuration SMTP (Gmail recommandé)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre.email@gmail.com
SMTP_PASS=votre_mot_de_passe_application
SMTP_SECURE=0

# Nom de l'expéditeur (anti-spam)
SENDER_NAME=Votre Nom ou Organisation

# Port du serveur
PORT=3001

# Clé API pour l'extension
API_KEY=HYPEREMAIL123

# Secret JWT pour l'authentification
JWT_SECRET=change-me-to-something-secure

# Limite de destinataires par envoi
MAX_RECIPIENTS=100000

# Configuration Supabase
# URL et clés Supabase
# NEXT_PUBLIC_SUPABASE_URL est utilisée par certains scripts/clients
NEXT_PUBLIC_SUPABASE_URL=votre_url_supabase
# Clé anonyme (publique) - utilisée côté client
NEXT_PUBLIC_SUPABASE_ANON_KEY=votre_cle_anonyme_supabase
# Clé service_role (secrète) - utilisée côté serveur pour opérations admin
SUPABASE_SERVICE_ROLE_KEY=votre_cle_service_role_supabase

# Chaîne de connexion Postgres (optionnelle si vous utilisez la DB directe)
# Exemple: postgresql://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres
DATABASE_URL=

# Email API utilisateur (pour le stockage des listes)
API_USER_EMAIL=api@local
API_USER_PASS=api-local-pass

# Origines autorisées pour CORS (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3000

# Contrôle des envois massifs (tweak selon votre fournisseur SMTP)
# Nombre de messages envoyés en parallèle
SEND_CONCURRENCY=6
# Taille d'un batch (groupe de messages envoyé avant une pause)
SEND_BATCH_SIZE=30
# Délai (ms) entre deux batchs
SEND_BATCH_DELAY=2000
